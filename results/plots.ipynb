import matplotlib.pyplot as plt
import numpy as np

def plot_nqueens(solution):
    n = len(solution)
    # Создаем шахматную доску (0 - белая, 1 - черная)
    board = np.zeros((n, n))
    board[1::2, ::2] = 1
    board[::2, 1::2] = 1

    fig, ax = plt.subplots(figsize=(6, 6))
    ax.imshow(board, cmap='binary', alpha=0.3)

    # Рисуем ферзей
    for col, row in enumerate(solution):
        ax.text(col, row, '♛', fontsize=30, ha='center', va='center', color='red')

    ax.set_xticks(range(n))
    ax.set_yticks(range(n))
    ax.set_xticklabels([chr(97 + i) for i in range(n)]) # a, b, c...
    ax.set_yticklabels(range(1, n + 1))
    plt.title(f"N-Queens Solution (N={n})")
    plt.show()

